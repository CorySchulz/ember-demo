{{page-title "Collection"}}

<div class="py-10" >

	<h2 class="text-center font-bold text-4xl pb-5" >
		Fragrances
	</h2>

	<div class="grid lg:grid-cols-3 xl:grid-cols-4 gap-6 p-6 mx-auto max-w-[1600px]" >
		{{#each @model as |product| }}
		  <a
		  	href="#/product/{{product.handle}}" 
		  	class="pb-8" >

		  	<img src="{{ product.images.0.src }}" 
		  		loading="lazy" />
		  	<p class="pt-4 text-lg" >
		  		{{product.title}}
		  	</p>
		  </a>
		{{/each}}
	</div>
</div>

{{outlet}}